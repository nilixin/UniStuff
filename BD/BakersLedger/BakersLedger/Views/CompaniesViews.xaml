<UserControl x:Class="BakersLedger.Views.CompaniesViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BakersLedger.Views"
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="690">
    <ScrollViewer>
        <StackPanel>

            <Border Style="{StaticResource PanelBorder}">
                <StackPanel Margin="40, 10, 40, 20">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Margin" Value="0, 0, 0, 10"/>
                        </Style>
                    </StackPanel.Resources>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Номер</TextBlock>
                    </Border>
                    <Border>
                        <ComboBox x:Name="cbShopsNumber" IsEditable="True"></ComboBox>
                    </Border>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Название</TextBlock>
                    </Border>
                    <Border>
                        <ComboBox x:Name="cbShopsTitle" IsEditable="True"></ComboBox>
                    </Border>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Район</TextBlock>
                    </Border>
                    <Border>
                        <ComboBox x:Name="cbShopsDistrict" IsEditable="True"></ComboBox>
                    </Border>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Город</TextBlock>
                    </Border>
                    <Border>
                        <ComboBox x:Name="cbShopsCity" IsEditable="True"></ComboBox>
                    </Border>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Адрес</TextBlock>
                    </Border>
                    <Border>
                        <TextBox x:Name="tbShopsAddress"></TextBox>
                    </Border>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Телефон</TextBlock>
                    </Border>
                    <Border>
                        <TextBox x:Name="tbShopsPhone"></TextBox>
                    </Border>
                </StackPanel>
            </Border>

            <Separator Height="20" Background="Transparent"/>

            <Border Style="{StaticResource PanelBorder}">
                <StackPanel Margin="40, 10, 40, 20">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Margin" Value="0, 0, 0, 10"/>
                        </Style>
                    </StackPanel.Resources>

                    <Border>
                        <TextBlock Style="{StaticResource PanelTextBlock}">Таблица</TextBlock>
                    </Border>
                    <Border>
                        <DataGrid x:Name="dgCompanies"
                                              AutoGenerateColumns="True"
                                              ItemsSource="{Binding}"
                                              Height="200"></DataGrid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
