<Window x:Class="BakersLedger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BakersLedger"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Background="{StaticResource DarkBase}"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#424242"/>

        <!-- Меню -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" x:Name="btnDeliveries" Style="{StaticResource MenuButton}" Click="btnDeliveries_Click">Поставки</Button>
                <Button Grid.Row="1" x:Name="btnShops" Style="{StaticResource MenuButton}">Магазины</Button>
                <Button Grid.Row="2" x:Name="btnProducts" Style="{StaticResource MenuButton}">Продукты</Button>
                <Button Grid.Row="3" x:Name="btnTrademarks" Style="{StaticResource MenuButton}">Марки</Button>
                <Button Grid.Row="4" x:Name="btnOwners" Style="{StaticResource MenuButton}">Владельцы</Button>
                <Button Grid.Row="5" x:Name="btnDistricts" Style="{StaticResource MenuButton}">Районы</Button>
                <Button Grid.Row="6" x:Name="btnSettlements" Style="{StaticResource MenuButton}">Города</Button>
                <Button Grid.Row="7" x:Name="btnGrades" Style="{StaticResource MenuButton}">Сорта муки</Button>
                <Button Grid.Row="8" x:Name="btnLegalentities" Style="{StaticResource MenuButton}">Типы собственности</Button>
                <Button Grid.Row="9" x:Name="btnQueries" Style="{StaticResource MenuButtonFocus}">Запросы</Button>
                <Button Grid.Row="14" x:Name="btnSettings" Style="{StaticResource MenuButton}">Настройки</Button>
                <Button Grid.Row="15" x:Name="btnExit" Style="{StaticResource MenuButtonWarning}" Click="btnExit_Click">Выход</Button>
            </Grid>
        </Grid>

        <!-- Главная панель -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Grid MouseDown="Grid_MouseDown" Background="{StaticResource DarkBase}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Grid>
</Window>
