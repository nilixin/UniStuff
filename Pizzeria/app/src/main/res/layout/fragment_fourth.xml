<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FourthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif-black"
            android:textSize="34sp"
            android:text="About"/>

        <ImageView
            android:id="@+id/ivPersonEatingPizza"
            android:layout_height="300dp"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAbout"
            android:src="@drawable/pizzeria"
            android:contentDescription="Person eating pizza" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivPersonEatingPizza"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:text="Sit eirmod et labore kasd sadipscing sed magna dolores sit. Et sit esse tation gubergren dolore vulputate rebum et diam duis praesent eirmod veniam et dolor sanctus. Duo amet sit at ea nonumy dolor no eirmod sit rebum vero invidunt quod eros amet dolores vero."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>